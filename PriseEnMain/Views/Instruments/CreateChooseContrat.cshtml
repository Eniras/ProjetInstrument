
@model IEnumerable<Contrat>
@{
    ViewData["Title"] = "Contrats";
}

<div>Contrats</div>
<hr />
<br />
<p>
    <a class="btn btn-outline-success rounded-0" asp-controller="Contrats" asp-action="Create">+ Create New One</a>
</p>
<form asp-controller="Instruments" asp-action="CreateChooseContrat">
    <p>
        <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @foreach (var item in Model)
        {
            @Html.ActionLink(item.Name, "CreateChooseContrat", "Instruments", new { contratId = item.Id }, new { @class = "list-group-item list-group-item-action text-primary" })
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
<br />
<div class="btn-container">
    <div class="btn-container">
        <a class="btn btn-outline-success rounded-0" asp-action="CreateChooseInstrumentSousjacent"><i data-feather="plus"></i> Back</a>
        <a class="btn btn-outline-success rounded-0" asp-action="Index"><i data-feather="plus"></i> Finish</a>
    </div>


</div>
