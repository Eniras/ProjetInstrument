
@model IEnumerable<Instrument>
@{
    ViewData["Title"] = "Intruments Sous-jacents";
}

<div>Intruments Sous-jacents</div>
<hr />
<br />
<p>
    <a class="btn btn-outline-success rounded-0" asp-controller="InstrumentSous_jacent" asp-action="Create">+ Create New One</a>
</p>
<form asp-controller="Instruments" asp-action="CreateChooseInstrumentSousjacent">
    <p>
        <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        @foreach (var item in Model)
        {
            @Html.ActionLink(item.Name, "CreateChooseInstrumentSousjacent", "Instruments", new { instrumentId = item.Id }, new { @class = "list-group-item list-group-item-action text-primary" })
        }
    </div>
</form>
<br />
<div class="btn-container">
    <div class="btn-container">
        <a class="btn btn-outline-success rounded-0" asp-action="CreateChooseEmetteur"><i data-feather="plus"></i> Back</a>
        <a class="btn btn-outline-success rounded-0" asp-action="CreateChooseContrat"><i data-feather="plus"></i> Next</a>
    </div>


</div>